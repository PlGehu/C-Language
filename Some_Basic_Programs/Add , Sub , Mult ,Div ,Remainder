// Code for the Subtraction of The Two Numbers :-

#include <stdio.h>
int main ()
{
  int a , b , sub ;
  printf ( "Enter the Two Numbers :- \ " );
  scanf ( "%d%d" , &a , &b );
  sub = a-b ;
  printf ( "The Subtraction of the Two Numbers is :- %d " , sub );
  return 0;
}


