// Code for the Addition of The Two Numbers :-

#include <stdio.h>
int main ()
{
  int a , b , sum ;
  printf ( "Enter the Two Numbers :- \ " );
  scanf ( "%d%d" , &a , &b );
  sum = a+b ;
  printf ( "The Sum of the Two Numbers is :- %d " , sum );
  return 0;
}


