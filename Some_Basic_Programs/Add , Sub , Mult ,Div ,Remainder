// Code for the Remainder of The Two Numbers :-

#include <stdio.h>
int main ()
{
  int a , b , rem ;
  printf ( "Enter the Two Numbers :- \ " );
  scanf ( "%d%d" , &a , &b );
  rem = a%b ;
  printf ( "The Remainder of the Two Numbers is :- %d " , rem );
  return 0;
}


